<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>
    <style>
        body{
            padding-top: 50px;
            padding-bottom: 50px;
        }
    </style>
</head>
<body>
    <div class="container" id="app">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="/">Home</a></li>
                </ol>
            </nav>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <form method="POST" action="/api/collection/add">
                    <label>
                        <span>Create collection name : </span>
                        <input type="text" name="name" />
                    </label>
                    <input type="submit" value="submit" />
                </form>
            </div> 
            <div>
                <label>
                    <span>Search : </span>
                    <input type="text" v-model="search" @keyup="filter()"/>
                </label>
            </div> 
        </div>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <td>Name</td>
                        <td>Status</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="row in rows">
                        <td>{{row._id}}</td>
                        <td>{{row.name}}</td>
                        <td>{{row.uploading}}</td>
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary py-1 px-2 dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"></button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li v-if="row.uploading"><a class="dropdown-item" :href="`/collection/${row._id}`">Upload</a></li>
                                    <li><a class="dropdown-item" :href="`/generate/${row._id}`">Generate</a></li>
                                    <li><a class="dropdown-item" :href="`/data/${row._id}`">Data</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

<script>
    

    const vue = new Vue({
        el:"#app",
        data:{
            rows:[],
            search:"",
            db:[],
        },
        mounted() {
            this.db = <%-JSON.stringify(data)%> ;
            this.filter()
        },
        methods:{
            filter(){
                console.log(this.search);
                let data = this.db
                if(this.search){
                    data = data.filter((element) => { return element.name.toLowerCase().indexOf(this.search) >= 0})
                }
                this.rows = data
            }
        }
    })
    
</script>