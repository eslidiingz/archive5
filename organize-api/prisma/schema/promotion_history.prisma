model PromotionHistory {
    id           Int        @id @default(autoincrement())
    promotion_id Int
    user_uid     String
    created_at   DateTime   @default(now())
    Promotion    Promotion? @relation(fields: [promotion_id], references: [id])

    @@map("promotion_history")
}

model Promotion {
    id      Int                @unique
    history PromotionHistory[]
}
